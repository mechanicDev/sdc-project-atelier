/* These are the schemas in use at the SDC DB */

CREATE TABLE questions (
  id INT NOT NULL,
  product_id VARCHAR(255) NOT NULL,
  body VARCHAR(255),
  date_written VARCHAR NOT NULL,
  asker_name VARCHAR(255) NOT NULL,
  asker_email VARCHAR(255) NOT NULL,
  reported INT NOT NULL,
  helpful INT NOT NULL,
  PRIMARY KEY(id)
);


CREATE TABLE answers (
  id INT NOT NULL,
  question_id INT NOT NULL,
  body VARCHAR(255),
  date_written VARCHAR NOT NULL,
  answerer_name VARCHAR(255),
  answerer_email VARCHAR(255),
  reported INT NOT NULL,
  helpful INT NOT NULL,
  PRIMARY KEY(id),
  FOREIGN KEY(question_id)
  REFERENCES questions(id)
);


CREATE TABLE answers_photos (
  id INT NOT NULL,
  answer_id INT NOT NULL,
  url VARCHAR(255),
  PRIMARY KEY(id),
  FOREIGN KEY(answer_id)
  REFERENCES answers(id)
);

CREATE TABLE products (
  id INT NOT NULL,
  name VARCHAR(80),
  slogan VARCHAR(255),
  description VARCHAR(255),
  category VARCHAR(255),
  default_price INT NOT NULL
)


/* These are the schemas in use in the sdc DB */
CREATE TABLE questions (
  id SERIAL NOT NULL,
  product_id INT NOT NULL,
  body VARCHAR(255),
  date_written BIGINT NOT NULL,
  asker_name VARCHAR(255) NOT NULL,
  asker_email VARCHAR(255) NOT NULL,
  reported INT NOT NULL,
  helpful INT NOT NULL,
  PRIMARY KEY(id)
);


CREATE TABLE answers (
  id SERIAL NOT NULL,
  question_id INT NOT NULL,
  body VARCHAR(255),
  date_written BIGINT NULL,
  answerer_name VARCHAR(255),
  answerer_email VARCHAR(255),
  reported INT NOT NULL,
  helpful INT NOT NULL,
  PRIMARY KEY(id),
  FOREIGN KEY(question_id)
  REFERENCES questions(id)
);

CREATE TABLE answers_photos (
  id SERIAL NOT NULL,
  answer_id INT NOT NULL,
  url VARCHAR(255),
  PRIMARY KEY(id),
  FOREIGN KEY(answer_id)
  REFERENCES answers(id)
);

/* COPY statements to import the CSVs  */

COPY questions(id, product_id, body, date_written, asker_name, asker_email, reported, helpful)
FROM '/Users/user/Desktop/questions.CSV'
DELIMITER ','
CSV HEADER;

COPY answers(id, question_id, body, date_written, answerer_name, answerer_email, reported, helpful)
FROM '/Users/user/Desktop/answers.csv'
DELIMITER ','
CSV HEADER;

COPY answers_photos(id, answer_id, url)
FROM '/Users/user/Desktop/answers_photos.csv'
DELIMITER ','
CSV HEADER;


